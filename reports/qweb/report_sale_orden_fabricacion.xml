<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="report_orden_fabricacion">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="doc">
            <t t-foreach="doc.order_line" t-as="line">
              <t t-call="web.external_layout">
                  <t t-set="address">
                      <div t-field="doc.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: True}"/>
                      <p t-if="doc.partner_id.vat">NIF: <span t-field="doc.partner_id.vat"/></p>
                  </t>
                  <div class="page">
                      
                      <h3 style="color:black; font-size:14pt; text-align: center;"><strong>ORDEN DE PRODUCCIÓN</strong></h3>
                      
                      <strong>Pedido: </strong><span t-field="doc.name"/><br/>
                      <strong>Fecha: </strong><span t-field="doc.date_order"/>
                      
                      <br/><br/>
                      
                      <div class="float-left company_address" style="padding:10px; font-size:12pt; width:33%;">
                        <strong>Cantonera color:</strong> <span t-field="line.oferta_id.attribute_id.cantonera_color_id"/><br/>
                        <strong>Cantonera forma:</strong> <span t-field="line.oferta_id.attribute_id.cantonera_forma_id"/><br/>
                        <strong>Cantonera especial:</strong> <span t-field="line.oferta_id.attribute_id.cantonera_especial_id"/><br/>
                        <strong>Perfil U color:</strong> <span t-field="line.oferta_id.attribute_id.perfilu_color_id"/><br/>
                        <strong>Tipo Inglete:</strong> <span t-field="line.oferta_id.attribute_id.inglete_id"/><br/>
                        <strong>Número de Ingletes:</strong> <span t-field="line.oferta_id.attribute_id.inglete_num"/><br/>
                        <strong>Inglete Descripcion:</strong> <span t-field="line.oferta_id.attribute_id.inglete_texto"/><br/>
                        <strong>Plancha color:</strong> <span t-field="line.oferta_id.attribute_id.plancha_color_id"/><br/>
                        <strong>Papel Calidad:</strong> <span t-field="line.oferta_id.attribute_id.papel_calidad_id"/><br/>
                        <strong>Troquelado:</strong> <span t-field="line.oferta_id.attribute_id.troquelado_id"/><br/>
                        <strong>FSC:</strong> <span t-field="line.oferta_id.attribute_id.fsc_id"/><br/>
                        <strong>Reciclable:</strong> <span t-field="line.oferta_id.attribute_id.reciclable_id"/><br/>
                        <strong>Cantonera 1:</strong> <span t-field="line.oferta_id.attribute_id.cantonera_1"/><br/>
                        <strong>Cantonera 2:</strong> <span t-field="line.oferta_id.attribute_id.cantonera_2"/><br/>
                        <strong>Cantonera 3:</strong> <span t-field="line.oferta_id.attribute_id.cantonera_3"/><br/>
                        <strong>Cantonera 4:</strong> <span t-field="line.oferta_id.attribute_id.cantonera_4"/><br/>
                        <strong>Sierra:</strong> <span t-field="line.oferta_id.attribute_id.sierra"/><br/>
                      </div>
                      
                      <div class="float-left company_address" style="padding:10px; font-size:12pt; width:33%;">
                        <strong>Paletizado:</strong> <span t-field="line.oferta_id.attribute_id.referencia_cliente_id.paletizado"/><br/>
                        <strong>Ancho pallet:</strong> <span t-field="line.oferta_id.attribute_id.referencia_cliente_id.ancho_pallet"/><br/>
                        <strong>Und Paquete:</strong> <span t-field="line.oferta_id.attribute_id.referencia_cliente_id.und_paquete"/><br/>
                        <strong>Paquetes fila:</strong> <span t-field="line.oferta_id.attribute_id.referencia_cliente_id.paquetes_fila"/><br/>
                        <strong>Alto fila:</strong> <span t-field="line.oferta_id.attribute_id.referencia_cliente_id.alto_fila"/><br/>
                        <strong>Fila max:</strong> <span t-field="line.oferta_id.attribute_id.referencia_cliente_id.fila_max"/><br/>
                        <strong>Fila buena:</strong> <span t-field="line.oferta_id.attribute_id.referencia_cliente_id.fila_buena"/><br/>
                        

                      </div>
                      
                      
                      <div class="float-left company_address" style="padding:10px; font-size:12pt; width:33%;">
                        <strong>Peso metro:</strong> <span t-esc="line.product_id.referencia_id.peso_metro"/><br/>
                        <strong>Metros unidad:</strong> <span t-esc="line.product_id.referencia_id.metros_unidad"/><br/>
                        <strong>J Gram:</strong> <span t-esc="line.product_id.referencia_id.j_gram"/><br/>
                        <strong>J Interior:</strong> <span t-esc="line.product_id.referencia_id.j_interior"/><br/>
                        <strong>J Superficie:</strong> <span t-esc="line.product_id.referencia_id.j_superficie"/><br/>
                        <strong>J Superficie Max:</strong> <span t-esc="line.product_id.referencia_id.j_superficie_max"/><br/>

                        

                      </div>

  
                  </div>
              </t>
            </t>
        </t>
    </t>
</template>
</data>
</openerp>
