<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="report_orden_fabricacion">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="doc">
            <t t-foreach="doc.order_line" t-as="line">
                <t t-if="line.product_uom_qty &gt; 0">
                  <t t-call="web.external_layout">
                      <!--<t t-set="address">
                          <div t-field="doc.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: True}"/>
                          <p t-if="doc.partner_id.vat">NIF: <span t-field="doc.partner_id.vat"/></p>
                      </t>-->
                      <div class="page">
                          
                          <h3 style="color:black; font-size:14pt; text-align: center;"><strong>ORDEN DE PRODUCCIÓN CANTONERAS</strong></h3>
                          
                          <div class="float-left company_address" style="padding:12px; margin:12px; font-size:12pt; width:100%; border: 3px solid #0c9c45; border-radius: 15px;" >
                              <div class="float-left company_address" style="padding:10px; font-size:12pt; width:50%;">
                                  <strong>Pedido: </strong><span t-field="doc.name"/><br/>
                                  <strong>Orden de producción: </strong><span t-field="line.id"/><br/>
                                  <strong>Cliente: </strong><span t-field="doc.partner_id.ref"/><br/>
                              </div>
                              <div class="float-left company_address" style="padding:10px; font-size:12pt; width:50%;">
                                  <strong>Máquina</strong><br/>
                                  <span t-field="line.oferta_id.op_cantonera_maquina"/><br/>
                              </div>
                          </div>
                          
                          <br/><br/>
                          
                          <div class="float-left company_address" style="padding:12px; margin:12px; font-size:12pt; width:100%; border: 3px solid #0c9c45; border-radius: 15px;" >
                              <div class="float-left company_address" style="padding:10px; font-size:12pt; width:50%;">
                                  <strong>Superficie Color: </strong><span t-field="line.op_superficie_color"/><br/>
                                  <strong>Superficie Ancho: </strong><span t-field="line.op_superficie_ancho"/><br/>
                                  <strong>Interior Ancho: </strong><span t-field="line.op_interior_ancho"/><br/>
                                  <strong>Interior Gramaje: </strong><span t-field="line.op_interior_gramaje"/><br/>
                              </div>
                              <div class="float-left company_address" style="padding:10px; font-size:12pt; width:50%;">
                                  <strong>Metros Totales: </strong><span t-field="line.op_metros"/><br/>
                                  <strong>Kg Totales: </strong><span t-field="line.op_peso"/><br/>
                                  <strong>Duración: </strong><span t-field="line.op_duracion"/><br/>
                              </div>
                          
                              <br/><br/>
                          
                              <div class="float-left company_address" style="padding:10px; font-size:12pt; width:50%;">
                                  <strong>Tinta 1: </strong><span t-field="line.op_tinta_1"/><br/>
                                  <strong>Texto 1: </strong><span t-field="line.op_texto_1"/><br/>
                              </div>
                              <div class="float-left company_address" style="padding:10px; font-size:12pt; width:50%;">
                                  <strong>Tinta 2: </strong><span t-field="line.op_tinta_2"/><br/>
                                  <strong>Texto 2: </strong><span t-field="line.op_texto_2"/><br/>
                              </div> 
                              
                              <br/><br/>
                              
                              <div class="float-left company_address" style="padding:10px; font-size:12pt; width:50%;">
                                  <strong>Alas: </strong><span t-field="line.op_alas"/><br/>
                                  <strong>Grosor: </strong><span t-field="line.op_grosor"/><br/>
                                  <strong>Longitud: </strong><span t-field="line.op_longitud"/><br/>
                              </div>
                              <div class="float-left company_address" style="padding:10px; font-size:12pt; width:50%;">
                                  <strong>Tolerancia Alas: </strong><span t-field="line.op_tolerancia_alas"/><br/>
                                  <strong>Tolerancia Grosor: </strong><span t-field="line.op_tolerancia_grosor"/><br/>
                                  <strong>Tolerancia Longitud: </strong><span t-field="line.op_tolerancia_longitud"/><br/>
                              </div> 
                              
                              <br/><br/>
                              
                              <div class="float-left company_address" style="padding:10px; font-size:12pt; width:50%;">
                                  <strong>Forma: </strong><span t-field="line.op_forma"/><br/>
                              </div>
                              <div class="float-left company_address" style="padding:10px; font-size:12pt; width:50%;">
                                  <strong>Especial: </strong><span t-field="line.op_especial"/><br/>
                              </div> 
                              
                              <br/><br/>
                              
                              <div class="float-left company_address" style="padding:10px; font-size:12pt; width:50%;">
                                  <strong>Ancho Pallet: </strong><span t-field="line.op_ancho_pallet"/><br/>
                                  <strong>Tipo Pallet: </strong><span t-field="line.op_tipo_pallet"/><br/>
                              </div>
                              <div class="float-left company_address" style="padding:10px; font-size:12pt; width:50%;">
                                  <strong>Paletizado: </strong><span t-field="line.op_paletizado"/><br/>
                                  <strong>Unidades Paquete: </strong><span t-field="line.op_und_paquete"/><br/>
                                  <strong>Paquetes Fila: </strong><span t-field="line.op_paquetes_fila"/><br/>
                              </div> 
                              
                              <br/><br/>
                              
                              <div class="float-left company_address" style="padding:10px; font-size:12pt; width:50%;">
                                  <strong>Unidades Pallet: </strong><span t-field="line.und_pallet"/><br/>
                                  <strong>Unidades Exactas: </strong><span t-field="line.op_und_exactas"/><br/>
                              </div>
                              <div class="float-left company_address" style="padding:10px; font-size:12pt; width:50%;">
                                  <strong>Número Pallets: </strong><span t-field="line.num_pallets"/><br/>
                              </div> 
                              
                          </div>
                          
                          <br/><br/>
                          
                          <div class="float-left company_address" style="padding:12px; margin:12px; font-size:12pt; width:100%; border: 3px solid #0c9c45; border-radius: 15px;" >
                              <strong>Comentario: </strong><span t-field="line.op_comentario"/><br/>
                          </div>
                          
                      </div>
                  </t>
              </t>
            </t>
        </t>
    </t>
</template>
</data>
</openerp>
