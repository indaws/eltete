<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="report_etiquetas_pedido">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="doc">
            <t t-foreach="doc.lot_ids" t-as="lot">
              <t t-call="web.external_layout">
                  <div class="page">
                      
					  
					  <table class="table" style="width:100%">
					  
						<tr>
							<td><strong>FECHA</strong></td>
							<td><strong>PEDIDO</strong></td>
						</tr>
						
						<tr>
							<td><span t-field="doc.order_id.date_order" t-options='{"format": "dd/MM/yyyy"}'/></td>
							<td><span t-field="doc.order_id.name"/></td>
						</tr>
						
						<tr>
							<td><strong>DESCRIPCIÓN</strong></td>
							<td><strong>UNIDADES</strong></td>
						</tr>
						
						<tr>
							<td><span t-field="lot.sale_order_line_id.descripcion"/></td>
							<td><span t-field="lot.unidades"/></td>
						</tr>
						
						<tr>
							<td><strong>ORDEN DE PRODUCCIÓN</strong></td>
							<td><strong>PALLET Nº</strong></td>
						</tr>
						
						<tr>
							<td>OP<span t-field="lot.sale_order_line_id.id"/></td>
							<td><span t-esc="doc.order_id.id"/>-<span t-esc="doc.id"/>-<span t-esc="lot_index+1"/></td>
						</tr>
						
						<tr>
							<td><strong>CLIENTE</strong></td>
							<td><strong>DIRECCIÓN DE ENTREGA</strong></td>
						</tr>
						
						<tr>
							<td><strong><span t-field="doc.order_id.partner_id.ref"/></strong><br/></td>
							<td>
								<span t-field="doc.order_id.partner_shipping_id.zip"/> <span t-field="doc.order_id.partner_shipping_id.city"/><br/>
								<span t-field="doc.order_id.partner_shipping_id.state_id"/><br/>
								<span t-field="doc.order_id.partner_shipping_id.country_id"/>
							</td>
						</tr>
					  
					  </table>
					  
					  
                      

  
                  </div>
              </t>
            </t>
        </t>
    </t>
</template>
</data>
</openerp>
