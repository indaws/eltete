<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="report_stock_production_lot_etiqueta">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="lot">

              <t t-call="web.external_layout">
                  <div class="page">
		      <div class="float-left company_address" style="padding:5px; margin-bottom:20px; text-align:center; font-size:64pt; width:100%;">
		          <td><span t-esc="lot.name"/></td>
		      </div> 
		      <div class="float-left company_address" style="padding:5px; margin-bottom:20px; text-align:center; font-size:32pt; width:100%;">
		          <td><span t-field="lot.sale_order_line_id.descripcion"/></td>
		      </div>
		      <div class="float-left company_address" style="margin-bottom:20px; width:100%;">
		          <div class="float-left company_address" style="padding:5px; text-align:center; font-size:32pt; width:50%;">
		              <td><span t-field="lot.unidades"/><br/>unidades</td>
			      <br/><br/>
			      <td>
			          <span t-field="lot.sale_order_line_id.order_id.partner_id.ref"/><br/>
				  <td><span t-field="lot.sale_order_line_id.order_id.name"/></td>
			      </td>
		          </div> 
		          <div class="float-left company_address" style="padding:5px; text-align:center; width:50%;">
		              <td><img t-att-src="lot.dir_qr"/></td>
		          </div>
		      </div>
		      <div class="float-left company_address" style="width:100%;">
		          <div class="float-left company_address" style="padding:5px; text-align:center; font-size:32pt; width:50%;">
			      <td>
			          <span t-field="lot.sale_order_line_id.order_id.partner_shipping_id.zip"/> <span t-field="lot.sale_order_line_id.order_id.partner_shipping_id.city"/><br/>
		              </td>
		          </div>
		          <div class="float-left company_address" style="padding:5px; text-align:center; font-size:32pt; width:50%;">
		              <td>
			          <span t-field="lot.sale_order_line_id.order_id.partner_shipping_id.state_id"/><br/>
				  <span t-field="lot.sale_order_line_id.order_id.partner_shipping_id.country_id"/>
		              </td>
		          </div>
	              </div>
                  </div>
              </t>

        </t>
    </t>
</template>
</data>
</openerp>
